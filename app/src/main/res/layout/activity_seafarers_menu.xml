<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SeafarersMenu"
    android:background="@color/colorAccent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="70dp"
            android:layout_marginRight="-17dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:id="@+id/buffer1" />

            <Button
                android:id="@+id/new_shores_button"
                android:layout_width="132dp"
                android:layout_height="120dp"
                android:layout_marginBottom="-1dp"
                android:background="@drawable/blue_hex"
                android:onClick="goNewShores"
                android:padding="20dp"
                android:text="Heading for New Shores"
                android:textColor="#000000"
                android:textSize="15dp" />

            <Button
                android:id="@+id/forgotten_tribe_button"
                android:layout_width="132dp"
                android:layout_height="120dp"
                android:layout_marginBottom="-1dp"
                android:background="@drawable/blue_hex"
                android:onClick="goForgottenTribe"
                android:padding="20dp"
                android:text="The Forgotten Tribe"
                android:textColor="#000000"
                android:textSize="15dp" />

            <Button
                android:id="@+id/fog_island_button"
                android:layout_width="132dp"
                android:layout_height="120dp"
                android:layout_marginBottom="-1dp"
                android:background="@drawable/blue_hex"
                android:onClick="goFogIsland"
                android:padding="20dp"
                android:text="The Fog Island"
                android:textColor="#000000"
                android:textSize="15dp" />

            <Button
                android:id="@+id/desert_button"
                android:layout_width="132dp"
                android:layout_height="120dp"
                android:background="@drawable/blue_hex"
                android:onClick="goDesert"
                android:padding="20dp"
                android:text="Through the Desert"
                android:textColor="#000000"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="-56dp"
            android:layout_marginLeft="-17dp">

            <Button
                android:id="@+id/wonders_button"
                android:layout_width="132dp"
                android:layout_height="120dp"
                android:layout_marginBottom="-1dp"
                android:background="@drawable/blue_hex"
                android:onClick="goWonders"
                android:padding="20dp"
                android:text="The Wonders of Catan"
                android:textColor="#000000"
                android:textSize="15dp" />

            <Button
                android:id="@+id/four_islands_button"
                android:layout_width="132dp"
                android:layout_height="120dp"
                android:layout_marginBottom="-1dp"
                android:background="@drawable/blue_hex"
                android:onClick="goFourIslands"
                android:padding="20dp"
                android:text="The Four Islands"
                android:textColor="#000000"
                android:textSize="15dp" />

            <Button
                android:id="@+id/cloth_button"
                android:layout_width="132dp"
                android:layout_height="120dp"
                android:layout_marginBottom="-1dp"
                android:background="@drawable/blue_hex"
                android:onClick="goCloth"
                android:padding="20dp"
                android:text="Cloth for Catan"
                android:textColor="#000000"
                android:textSize="15dp" />

            <Button
                android:id="@+id/new_button"
                android:layout_width="132dp"
                android:layout_height="120dp"
                android:background="@drawable/blue_hex"
                android:onClick="goNew"
                android:padding="20dp"
                android:text="New World"
                android:textColor="#000000"
                android:textSize="15dp" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:id="@+id/buffer2" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>