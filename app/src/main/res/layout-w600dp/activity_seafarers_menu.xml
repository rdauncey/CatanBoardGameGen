<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".SeafarersMenu"
    android:gravity="center"
    android:background="@color/colorAccent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="50dp"
        android:layout_marginRight="-28dp">

        <Button
            android:id="@+id/new_shores_button"
            android:layout_width="220dp"
            android:layout_height="200dp"
            android:background="@drawable/blue_hex"
            android:onClick="goNewShores"
            android:textSize="30dp"
            android:text="Heading for New Shores"
            android:padding="20dp"
            android:layout_marginBottom="-1dp" />
        <Button
            android:id="@+id/forgotten_tribe_button"
            android:layout_width="220dp"
            android:layout_height="200dp"
            android:background="@drawable/blue_hex"
            android:onClick="goForgottenTribe"
            android:textSize="30dp"
            android:text="The Forgotten Tribe"
            android:padding="20dp"
            android:layout_marginBottom="-1dp" />
        <Button
            android:id="@+id/fog_island_button"
            android:layout_width="220dp"
            android:layout_height="200dp"
            android:background="@drawable/blue_hex"
            android:onClick="goFogIsland"
            android:textSize="30dp"
            android:text="The Fog Island"
            android:padding="20dp"
            android:layout_marginBottom="-1dp" />
        <Button
            android:id="@+id/desert_button"
            android:layout_width="220dp"
            android:layout_height="200dp"
            android:background="@drawable/blue_hex"
            android:onClick="goDesert"
            android:textSize="30dp"
            android:padding="20dp"
            android:text="Through the Desert" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="-50dp"
        android:layout_marginLeft="-28dp">
        <Button
            android:id="@+id/wonders_button"
            android:layout_width="220dp"
            android:layout_height="200dp"
            android:background="@drawable/blue_hex"
            android:onClick="goWonders"
            android:text="The Wonders of Catan"
            android:textSize="30dp"
            android:padding="20dp"
            android:layout_marginBottom="-1dp" />
        <Button
            android:id="@+id/four_islands_button"
            android:layout_width="220dp"
            android:layout_height="200dp"
            android:background="@drawable/blue_hex"
            android:onClick="goFourIslands"
            android:text="The Four Islands"
            android:textSize="30dp"
            android:padding="20dp"
            android:layout_marginBottom="-1dp" />
        <Button
            android:id="@+id/cloth_button"
            android:layout_width="220dp"
            android:layout_height="200dp"
            android:background="@drawable/blue_hex"
            android:onClick="goCloth"
            android:textSize="30dp"
            android:text="Cloth for Catan"
            android:padding="20dp"
            android:layout_marginBottom="-1dp"/>
        <Button
            android:id="@+id/new_button"
            android:layout_width="220dp"
            android:layout_height="200dp"
            android:background="@drawable/blue_hex"
            android:onClick="goNew"
            android:textSize="30dp"
            android:text="New World"
            android:padding="20dp" />
    </LinearLayout>
</LinearLayout>